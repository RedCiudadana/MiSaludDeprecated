{{!-- Slider --}}
<div id="wrapper-slider">
  {{!-- slider --}}
  <img
    src="{{rootURL}}/img/slider.png"
    alt=""
    width="100%"
    class="42vw"
    id="start"
  >
  <img
    src="{{rootURL}}/img/ambulance.png"
    alt="Ambulancia"
    class="ambulance animate-to-left"
  >
</div>
{{!-- Filters and search --}}
{{!-- Fluid light container --}}
<div class="bg-light w-100">
  <div class="container container-padding">
    <div class="row">
      <div class="col-8 offset-2">
        {{#power-select
          options=options
          onchange=(action "selectProfile")
          selected=profileSelected
          as |name|
        }}
          {{name}}
        {{/power-select}}
      </div>
    </div>
    <div class="row">
      <div class="col-10 offset-1 col-md-4 offset-md-2 filters">
        {{!-- Departamento --}}
        {{one-way-select selectedValue
          options=options
          update=(action (mut selectedValue))
          class="form-control"
        }}
      </div>
      <div class="col-10 offset-1 col-md-4 offset-md-0 filters">
        {{!-- Hospital/Centro de salud --}}
        {{one-way-select selectedValue
          options=options
          update=(action (mut selectedValue))
          class="form-control"
        }}
      </div>
    </div>
  </div>
</div>
{{!-- Portofolio preview-hospital --}}
{{!-- White container --}}
<div class="container container-padding">
  {{preview-hospital}}
</div>
